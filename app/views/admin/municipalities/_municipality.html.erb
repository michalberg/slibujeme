<tr>
    <td style="padding-left:<%= 20 * municipality.depth %>px;">
        <% if (municipality.is_root?) %><strong><% end %>
        <%= " &mdash; ".html_safe  %><%= municipality.title %>
        <% if (municipality.is_root?) %></strong><% end %>
    </td>
    <td>
        <div class="btn-group">
            <% if municipality.depth < 2 %>
            <%= link_to '<i class="icon-pencil"></i>'.html_safe, new_admin_municipality_path(:parent_id => municipality.id), :class => "btn" %>
            <% end %>
            <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_municipality_path(municipality), :class => "btn btn-small" %>
            <%= link_to '<i class="icon-trash icon-white"></i>'.html_safe, admin_municipality_path(municipality), :method => :delete, :class => "btn btn-small btn-danger", :confirm => "Opravdu chcete obec \"#{municipality.title}\" smazat?" %>
        </div>
    </td>
</tr>