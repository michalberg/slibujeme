<%= form_for [:admin, @municipality] do |f| -%>
  <div class="control-group<% if @municipality.errors.messages[:title] %> error<% end %>">
      <%= f.label :title %>
      <div class="controls">
          <%= f.text_field :title %>
          <% if @municipality.errors.messages[:title] %>
            <% @municipality.errors.messages[:title].each do |msg| %>
            <span class="help-inline"><%= msg %></span><br>            
            <% end %>
          <% end %>
      </div>
  </div>
  <div class="control-group">
      <%= f.label :parent_id %>
      <div class="controls">
          <%= f.grouped_collection_select :parent_id, Municipality.roots, :children, :title, :id, :title, :include_blank => true %>
      </div>
  </div>
  <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
      <%= link_to '<i class="icon-arrow-left"></i> ZpÄ›t'.html_safe , admin_municipalities_path, :class => "btn" %>
  </div>
<% end -%>

