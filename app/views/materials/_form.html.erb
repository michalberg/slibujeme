  <div id="material-form-documents">
      
  </div>
  <div id="material-form-metadata">
      <p>
          <%= f.label :election_id %>
          <%= f.collection_select :election_id, Election.all, 'id', 'title' %>
      </p>
      
      <p>
          <%= f.label :municipality_id %>
          <%= autocomplete_field_tag :municipality_name, "", autocomplete_municipality_title_materials_path, :id_element => "#material_municipality_id" %>
          <%= f.hidden_field :municipality_id %>
      </p>
      <p>
          <%= f.label :party_id %>
          <%= f.collection_select :party_id, Party.all, 'id', 'title' %>
      </p>
      
      <p>
          <%= f.label :topics %>
          <%= f.text_area :topics %>
      </p>
      
      <p>
          <%= f.label :polititians %>
          <%= f.text_area :polititians %>
      </p>
      
      <p>
          <%= f.label :comment %>
          <%= f.text_area :comment %>
      </p>
      
      <p>
          <%= f.label :contact %>
          <%= f.text_field :contact %>
      </p>
      <p id="material-form-controls">
          <%= f.submit "VloÅ¾it", class: "btn success big violet" %>
      </p>
  </div>
<% end -%>